<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://kit.fontawesome.com/a0f8081e82.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Comic+Neue:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Rampart+One&family=Special+Elite&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="../css/styles.css">
        <link rel="stylesheet" href="../css/stylescart.css">
        <link rel="stylesheet" href="../css/productList.css">
        <title>Product List</title>
    </head>
<body>
    <%- include('../partials/header')%>
        <section>
            <% products.forEach(product=> { %>
                <article>
                    <a href="./productDetail/<%= product.id %>"><img src="../../../<%= product.producto %>"  class="producto" ></a>
                    
                    <ul class="hello">
                        <li class="texto1">
                            <%= product.nombre %>
                        </li>
                        <div class="ver">
                            <li class="texto">$<%= product.precio %>
                            </li>
                            <li><i class="fas fa-shopping-cart"></i></li>
                        </div>
                    </ul>
                </article>
                <% }); %>
        </section>
</body>
</html>